<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        xmlns:sys="clr-namespace:System;assembly=System.Runtime"
        Title="MainWindow"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d">
    <Window.Resources>
        <local:BindingProxy x:Key="root" Data="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
        <sys:String x:Key="str">Hello String</sys:String>
        <ObjectDataProvider x:Key="DateProvider"
                            ObjectType="{x:Type sys:Enum}"
                            MethodName="GetValues">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="local:DateOfWeek" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
    </Window.Resources>
    <StackPanel>
        <ComboBox ItemsSource="{Binding Source={StaticResource DateProvider}}" />
        <ComboBox ItemsSource="{local:EnumBindingSource EnumType=local:DateOfWeek}" />
        <TextBlock x:Name="txt" Text="Hello World" />
        <Button x:Name="btn" Content="hello i am button ">
            <Button.Resources>
                <local:BindingProxy x:Key="MyButton" Data="{Binding ElementName=btn}" />
            </Button.Resources>
            <Button.ToolTip>
                <ToolTip>
                    <!--<TextBlock Text="{Binding RelativeSource={RelativeSource AncestorType=ToolTip}, Path=PlacementTarget.Content}" />-->
                    <TextBlock Text="{Binding Source={StaticResource MyButton}, Path=Data.Content}" />
                </ToolTip>
            </Button.ToolTip>
            <Button.ContextMenu>
                <ContextMenu>
                    <!--<MenuItem Header="{Binding RelativeSource={RelativeSource AncestorType=ContextMenu}, Path=PlacementTarget.Content}" />-->
                    <MenuItem Name="Item1"
                              Command="{Binding Source={StaticResource root}, Path=Data.DataContext.FooCommand}"
                              Header="{Binding Source={StaticResource MyButton}, Path=Data.Content}"
                              CommandParameter="{Binding RelativeSource={RelativeSource Self}}">
                    </MenuItem>
                </ContextMenu>
            </Button.ContextMenu>
        </Button>
        <DataGrid>
            <DataGrid.Columns>
                <DataGridTextColumn Header="{Binding Source={x:Reference Name=txt}, Path=Text}" />
            </DataGrid.Columns>
        </DataGrid>
        <TextBlock Text="{Binding Source={StaticResource str}}">
        </TextBlock>
    </StackPanel>
</Window>
