<Window x:Class="AsyncLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncLearn"
        Title="MainWindow"
        Width="800"
        Height="450"
        mc:Ignorable="d">
    <Grid>
        <StackPanel>
            <TextBox x:Name="MyTextBox">
            </TextBox>
            <TextBlock x:Name="OutputTextBlock" Text="Not Start yet" />
            <Button Width="100" Margin="0,20,0,0" Content="Click"
                    Click="ButtonClickHandler" />
            <Button Width="100" Margin="0,20,0,0" Content="Click2"
                    Click="ButtonClickHandler2" />
        </StackPanel>
    </Grid>
</Window>
