<Window x:Class="ProgressLearn.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProgressLearn"
        Title="MainWindow"
        Width="500"
        Height="350"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        mc:Ignorable="d">
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter">
        </BooleanToVisibilityConverter>
    </Window.Resources>
    <StackPanel Margin="10,0" VerticalAlignment="Center">
        <Button Name="button" Width="100" Margin="10"
                Content="启动" FontSize="16"
                Command="{Binding DoJobCommand}" />
        <ProgressBar Height="20" Margin="20,20" VerticalAlignment="Center"
                     IsIndeterminate="True"
                     Visibility="{Binding DoJobCommand.IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}" />


    </StackPanel>
</Window>
