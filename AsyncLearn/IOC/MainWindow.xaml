<Window x:Class="IOC.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IOC"
        Title="MainWindow"
        Width="800"
        Height="450"
        d:DataContext="{d:DesignInstance local:MainViewModel}"
        FontSize="16"
        mc:Ignorable="d">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <TextBlock Text="Limit:" />
            <TextBox x:Name="limit" Width="200"
                     Text="{Binding Limit, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="Get Facts"
                    CommandParameter="{Binding ElementName=limit, Path=Text}"
                    Command="{Binding GetFactsCommand}" />
        </StackPanel>
        <Button Margin="20" Content="Check Device"
                Command="{Binding CheckDeviceCommand}">
        </Button>
        <ListBox FontSize="16" ItemsSource="{Binding Facts}">
        </ListBox>
    </DockPanel>
</Window>
