<Window x:Class="WpfApp2Binding.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2Binding"
        xmlns:c="clr-namespace:CalcBinding;assembly=CalcBinding"
        Title="MainWindow"
        Width="800"
        Height="450"
        FontSize="16"
        mc:Ignorable="d">
    <Window.DataContext>
        <local:MainViewModel />
    </Window.DataContext>
    <Grid>
        <Button VerticalAlignment="Top" HorizontalAlignment="Right" Content="关闭" Command="{Binding CloseWindowCommand}" CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"/>
        <StackPanel Width="200" VerticalAlignment="Center" Orientation="Vertical">
            <TextBox Width="80" Text="{Binding FirstName}" />
            <TextBox Width="80" Height="40"
                     Text="{Binding LastName}" />
            <TextBox Width="100"
                     Text="{c:Binding FirstName + \' \' + LastName}"
                     IsReadOnly="True" />

            <!--<TextBlock Text="{Binding Source={x:Static local:MainViewModel.Answer}}" />-->
            <TextBlock Text="{c:Binding Answer+27}" />
        </StackPanel>

    </Grid>
</Window>
