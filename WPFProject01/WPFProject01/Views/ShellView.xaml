<Window x:Class="WPFProject01.Views.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:fluent="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:vm="clr-namespace:WPFProject01.ViewModels"
        xmlns:helper="clr-namespace:WPFProject01.Helper"
        d:DataContext="{d:DesignInstance vm:ShellViewModel}"
        xmlns:local="clr-namespace:WPFProject01.Views"
        ResizeMode="CanResize"
        mc:Ignorable="d"
        WindowStyle="None"
        AllowsTransparency="True"
        Height="550" Width="900">
    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      CornerRadius="32"
                      CaptionHeight="0"

                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>
    <Grid>
        <Border Background="#383B43" Height="40" VerticalAlignment="Top" MouseLeftButtonDown="UIElement_OnMouseLeftButtonDown">
            <!-- <Border.Clip> -->
            <!--     <RectangleGeometry Rect="0,0,900,550" RadiusX="15" RadiusY="15"/> -->
            <!-- </Border.Clip> -->
            <Border.Effect>
                <DropShadowEffect BlurRadius="10" ShadowDepth="0" Opacity="0.4"></DropShadowEffect>
            </Border.Effect>
            <DockPanel >
                <ToggleButton Command="{Binding ToggleNavCommand}"
                              AutomationProperties.Name="HamburgerToggleButton"
                              Foreground="White"
                              Visibility="{Binding ToggleButtonIsVisibility,Converter={StaticResource BooleanToVisibilityConverter}}"
                              IsChecked="{Binding IsVisibility,Mode=TwoWay}"
                              Style="{StaticResource MaterialDesignHamburgerToggleButton}">
                </ToggleButton>
                <TextBlock Text="后台管理系统"
                           DockPanel.Dock="Left"
                           VerticalAlignment="Center"
                           Margin="10,0,0,0"
                           FontSize="16"
                           Foreground="White" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="10,0" DockPanel.Dock="Right">

                    <Button Style="{StaticResource ShellButtonStyle}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Command="{Binding MiniCommand}"
                            Content="{md:PackIcon Kind=Minimize}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}" />
                    <Button Style="{StaticResource ShellButtonStyle}"
                            Foreground="White"
                            Margin="10,0"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Command="{Binding MaxiCommand}"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            ToolTip="最大化">
                        <md:PackIcon Kind="WindowMaximize" Width="20" Height="20" />
                    </Button>
                    <Button Style="{StaticResource ShellCloseButtonStyle}"
                            Background="Transparent"
                            BorderBrush="Transparent"
                            Margin="10,0,0,0"
                            Command="{Binding CloseCommand}"
                            Padding="0"
                            CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                            ToolTip="关闭窗口">
                        <md:PackIcon Kind="Close" Width="20" Height="20" />
                    </Button>
                </StackPanel>
            </DockPanel>


        </Border>
        <Grid Margin="0,40,0,0">
            <ContentControl Content="{Binding CurrentPage}" />
            <md:DialogHost Identifier="ShellDialog" />
            <md:Snackbar
                FontSize="16"
                Background="DarkSlateGray"
                Foreground="White"
                VerticalAlignment="Bottom"
                Width="200"
                Padding="0"
                MessageQueue="{x:Static helper:GlobalSnackbar.Queue}">
            </md:Snackbar>
        </Grid>

    </Grid>
</Window>