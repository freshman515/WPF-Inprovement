<UserControl x:Class="WPFProject01.Views.UserView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="clr-namespace:WPFProject01.ViewModels"
             d:DataContext="{d:DesignInstance vm:UserViewModel}"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WPFProject01.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="880">
    <Grid TextElement.FontSize="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="50" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

      
        <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <md:PackIcon Kind="Account" Height="30" Width="30" Margin="20,5" />
                <TextBlock Text="用户管理" FontSize="18" VerticalAlignment="Center"></TextBlock>
            </StackPanel>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Grid.Row="1">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="用户账号:"
                           VerticalAlignment="Center" Margin="10,3" />
                <TextBox md:HintAssist.Hint="请输入账号" 
                         md:HintAssist.IsFloating="True"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         FontSize="14"
                          md:TextFieldAssist.TextFieldCornerRadius="8"
                         Text="{Binding Username,UpdateSourceTrigger=PropertyChanged}"
                         Padding="6,6,6,6"
                         Width="200" Margin="10,3">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"></KeyBinding>
                    </TextBox.InputBindings>
                </TextBox>
                <TextBlock Text="手机号:" VerticalAlignment="Center" Margin="10,3" />
                <TextBox md:HintAssist.Hint="请输入手机号"
                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                         md:TextFieldAssist.TextFieldCornerRadius="8"
                         Padding="6,6,6,6"
                         md:HintAssist.IsFloating="True"
                         Text="{Binding Telephone,UpdateSourceTrigger=PropertyChanged}"
                         Width="200" Margin="10,3,100,3">
                    <TextBox.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}"></KeyBinding>
                    </TextBox.InputBindings>
                </TextBox>
                <Button Content="查询" Command="{Binding SearchCommand}" Background="CornflowerBlue" Margin="10,3" />
                <Button Content="重置" Command="{Binding ResetCommand}" Background="black" Margin="10,3" />
            </StackPanel>
        </Border>
        <Border BorderBrush="Gray" BorderThickness="0,0,0,2" Grid.Row="2">
            <DockPanel Margin="10,3" LastChildFill="False">
                <!-- 其他按钮停靠在顶部 -->
                <Button Content="新增" Command="{Binding AddCommand}" Background="CornflowerBlue" Margin="10,0"
                        DockPanel.Dock="Left" />
                <Button Content="导出" Command="{Binding ExportCommand}" Background="CornflowerBlue" Margin="10,0"
                        DockPanel.Dock="Left" />
                <Button Content="清除全部" Command="{Binding DeleteAllCommand}" Background="CornflowerBlue" Margin="10,0"
                        DockPanel.Dock="Left" />

            </DockPanel>
        </Border>
        <ListView Grid.Row="3" ItemsSource="{Binding UserList}" Background="Transparent">
            <ListView.View>
                <GridView>
                    <GridViewColumn>
                        <GridViewColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Background="Transparent" Content="点击勾选" Foreground="Gray">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                        </Style>
                                    </CheckBox.Style>
                                    <i:Interaction.Triggers>
                                        <i:EventTrigger EventName="Checked">
                                            <i:InvokeCommandAction
                                                Command="{Binding DataContext.AllSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                        </i:EventTrigger>
                                        <i:EventTrigger EventName="Unchecked">
                                            <i:InvokeCommandAction
                                                Command="{Binding DataContext.AllUnSelectedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                                        </i:EventTrigger>

                                    </i:Interaction.Triggers>

                                </CheckBox>

                            </DataTemplate>
                        </GridViewColumn.HeaderTemplate>
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Margin="18,5" IsChecked="{Binding IsSelected}">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Cursor" Value="Hand"></Setter>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="序列号">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Margin="20,5" Text="{Binding Id}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="用户名">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock VerticalAlignment="Center" Margin="25,5" Width="auto"
                                           Text="{Binding Username}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="手机号">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <TextBlock Margin="25,5" VerticalAlignment="Center" Text="{Binding Telephone}" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="角色">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <Border VerticalAlignment="Center">
                                    <TextBlock Margin="25,5" Width="auto" Text="{Binding Role}"
                                               VerticalAlignment="Center" />
                                </Border>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="操作">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="编辑" Style="{StaticResource AnimatedTextBlockStyle}" Margin="5"
                                               Foreground="CadetBlue">

                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction
                                                    Command="{Binding RelativeSource={RelativeSource Mode=FindAncestor,AncestorType=UserControl},Path=DataContext.EditCommand}"
                                                    CommandParameter="{Binding}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBlock>
                                    <TextBlock Text="删除" Style="{StaticResource ClickableTextBlockStyle}" Margin="5"
                                               Foreground="red">
                                        <i:Interaction.Triggers>
                                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                                <i:InvokeCommandAction
                                                    Command="{Binding RelativeSource= {RelativeSource Mode=FindAncestor,AncestorType=UserControl},Path=DataContext.DeleteCommand}"
                                                    CommandParameter="{Binding Id}" />
                                            </i:EventTrigger>
                                        </i:Interaction.Triggers>
                                    </TextBlock>
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>