<UserControl x:Class="WPFProject01.Controls.UserCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign ="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:WPFProject01.Controls"
             mc:Ignorable="d"
             x:Name="root">
    <Border CornerRadius="12" 
            BorderBrush="#CCC" BorderThickness="1" 
            Padding="12" Background="White"
            Effect="{StaticResource ShadowEffect}"
            Width="360">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
            <!-- 头像圆形剪裁 -->
            <Border Width="{Binding ImgWidth, ElementName=root}" 
                    Height="{Binding ImgHeight, ElementName=root}" 
                    CornerRadius="{Binding ImgWidth, ElementName=root}" 
                    ClipToBounds="True" 
                    Margin="0,0,14,0">
                <Image Source="{Binding Avatar, ElementName=root}" Stretch="UniformToFill"/>
            </Border>

            <StackPanel VerticalAlignment="Center">
                <TextBlock Text="{Binding UserName, ElementName=root}" 
                           FontSize="18" FontWeight="SemiBold" 
                           Foreground="#222"/>
                <TextBlock Text="{Binding Title, ElementName=root}" 
                           Foreground="#666" FontSize="14" Margin="0,2,0,0"/>
                <TextBlock Text="{Binding Email, ElementName=root}" 
                           FontSize="12" Foreground="#999" Margin="0,4,0,0"/>
            </StackPanel>
        </StackPanel>
    </Border>
</UserControl>