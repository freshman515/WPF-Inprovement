<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="BackgroundColor">White</Color>
    <Color x:Key="ForegroundColor">Black</Color>
    
    <SolidColorBrush x:Key="AppBackground" Color="{StaticResource BackgroundColor}"></SolidColorBrush>
    <SolidColorBrush x:Key="AppForeground" Color="{StaticResource ForegroundColor}"></SolidColorBrush>
</ResourceDictionary>