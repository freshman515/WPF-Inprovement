    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>
    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
    </Window.Resources>
    <Grid>
        <ListBox ItemsSource="{Binding Books}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ProgressBar Height="20" Margin="20,20" VerticalAlignment="Center"
                     IsIndeterminate="True"
                     Visibility="{Binding LoadBooksCommand.IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}" />
