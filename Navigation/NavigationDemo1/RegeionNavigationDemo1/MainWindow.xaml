<Window x:Class="RegeionNavigationDemo1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RegeionNavigationDemo1"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        xmlns:vm="clr-namespace:RegeionNavigationDemo1.ViewModels"
        d:DataContext="{d:DesignInstance vm:MainViewModel}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition  Height="40"/>
            <RowDefinition  Height="200"/>
            <RowDefinition  Height="200"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <StackPanel.Resources>
            </StackPanel.Resources>
            <RadioButton Command="{Binding GoHomeCommand}" Content="Home" FontSize="16" VerticalAlignment="Center"
                  Background="#5689fC" Margin="10,0"/>
            <RadioButton Command="{Binding GoEditCommand}" Content="Edit" FontSize="16" VerticalAlignment="Center"
                  Background="#BC9AE1" Margin="10,0"/>
            <RadioButton Command="{Binding GoSettingsCommand}" Content="Settings" FontSize="16" VerticalAlignment="Center"
                  Background="#48B8C4" Margin="10,0"/>
            <TextBox  MinWidth="100" Margin="10,2" Text="{Binding UserId,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <TextBox  MinWidth="100" Margin="10,2" Text="{Binding Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
            <RadioButton Command="{Binding GoHomeRegion2Command}" Content="Home" FontSize="16" VerticalAlignment="Center"
                         Background="#5689fC" Margin="10,0"/>
            <RadioButton Command="{Binding GoEditRegion2Command}" Content="Edit" FontSize="16" VerticalAlignment="Center"
                         Background="#BC9AE1" Margin="10,0"/>
            <RadioButton Command="{Binding GoSettingsRegion2Command}" Content="Settings" FontSize="16" VerticalAlignment="Center"
                         Background="#48B8C4" Margin="10,0"/>
            <Button Content="弹窗" Command="{Binding ShowNewWindiowCommand }"/>
        </StackPanel>
        <Border Grid.Row="1">
            <ContentControl Content="{Binding CurrentView}"/>
        </Border>
        <Border Grid.Row="2">
            <ContentControl Content="{Binding CurrentView2}"/>
        </Border>
    </Grid>
</Window>
